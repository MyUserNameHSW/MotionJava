<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.hsw.motionjava">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Motion">
        <activity
            android:name=".demo.dissolve.DissolveActivity"
            android:label="@string/dissolve_label">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="com.hsw.motionjava.intent.category.DEMO" />
            </intent-filter>

            <meta-data
                android:name="com.hsw.motionjava.demolist.DESCRIPTION"
                android:value="@string/dissolve_description" />
            <meta-data
                android:name="com.hsw.motionjava.demolist.APIS"
                android:resource="@array/dissolve_apis" />
        </activity>


        <activity
            android:name=".demo.fabtransformation.FabTransformationActivity"
            android:label="@string/fab_transformation_label">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="com.hsw.motionjava.intent.category.DEMO" />
            </intent-filter>

            <meta-data
                android:name="com.hsw.motionjava.demolist.DESCRIPTION"
                android:value="@string/fab_transformation_description" />
            <meta-data
                android:name="com.hsw.motionjava.demolist.APIS"
                android:resource="@array/fab_transformation_apis" />
        </activity>

        <activity
            android:name=".demo.fadethrough.FadeThroughActivity"
            android:label="@string/fade_through_label">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="com.hsw.motionjava.intent.category.DEMO" />
            </intent-filter>

            <meta-data
                android:name="com.hsw.motionjava.demolist.DESCRIPTION"
                android:value="@string/fade_through_description" />
            <meta-data
                android:name="com.hsw.motionjava.demolist.APIS"
                android:resource="@array/fade_through_apis" />
        </activity>

        <activity
            android:name=".demo.reorder.ReorderActivity"
            android:label="@string/reorder_label">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="com.hsw.motionjava.intent.category.DEMO" />
            </intent-filter>

            <meta-data
                android:name="com.hsw.motionjava.demolist.DESCRIPTION"
                android:value="@string/reorder_description" />
            <meta-data
                android:name="com.hsw.motionjava.demolist.APIS"
                android:resource="@array/reorder_apis" />
        </activity>

        <activity
            android:name=".MainActivity"
            android:theme="@style/Theme.Motion.CardUi">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>